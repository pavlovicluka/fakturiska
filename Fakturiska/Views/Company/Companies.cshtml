@model IEnumerable<Fakturiska.Models.CompanyModel>

<div class="modal fade" id="companyModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="companyModalTitle">Kreiraj pravno lice</h4>
            </div>
            <div class="modal-body row" id="companyModalBody">
            </div>
            <div class="modal-footer">
                <a class="btn btn-success" onclick="submitForm()">Potvrdi</a>
                <a class="btn btn-danger" data-dismiss="modal">Close</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="pull-right" style="padding:35px">
        <a class="btn btn-info btn-lg" onclick="createCompany()">Kreiraj</a>
    </div>
</div>

<div class="form-group col-md-3" style="padding-right:0px">
    <div class="input-group">
        <input class="form-control" id="searchCompanies" type="search" placeholder="Pretraži">
        <span class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></span>
    </div>
</div>

<div id="result">
    <table id="tableCompanies" class="table">
        <thead class="row">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FaxNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Website)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PersonalNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PIB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MIB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BankCode)
                </th>
                <th>
                    Opcije
                </th>
            </tr>
        </thead>

        <tbody class="row"></tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/ScriptsCustom/companies.js")
}
